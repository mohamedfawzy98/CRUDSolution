@model PlayersViewModel
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var Counteries = new SelectList(ViewData["countery"] as IEnumerable<Countery<int>>, "Id", "Name");

}

<h1>Details Player</h1>


<div class="row .mt-60 justify-content-between">
    <div class="col-md-3">
            <img src="~/files/Image/@Model.Poster" alt="poster" class="img-thumbnail" />
    </div>
        <div class="col-md-7 ">
            <div class="d-flex justify-content-between mb-3">
                <h3>@Model.Name</h3>
                <span class="mt-2">
                    <i class="bi bi-star-fill text-warning"></i>
                     @Model.Rate.ToString("0.0")
                </span>
            </div>
            <span class="text-muted mr-3">
                <i class="bi bi-calendar-week"></i>
                @Model.YearBirth
            </span>
            <span class="text-muted">
            <i class="bi bi-house-door-fill"></i>
                @Model.Countery.Name
            </span>
            <p class="text-justify mt-3">@Model.Description</p>
        </div>
    </div>
 

    <button asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning mt-4">
            <i class="bi bi-pencil"></i>
        Edit
    </button>
    <a class="btn btn-outline-secondary mt-4" asp-action="Index">
        <i class="bi bi-x"></i>
        Back To List
    </a>
</div>
    


