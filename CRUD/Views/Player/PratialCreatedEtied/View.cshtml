@model PlayersViewModel
@{
    var Counteries = new SelectList(ViewData["countery"] as IEnumerable<Countery<int>>, "Id", "Name");

}


<div class="form-group">
    <label class="text-muted" asp-for="Name"></label>
    <input class="form-control" type="text" asp-for="Name" maxlength="250" />
    <span class="text-danger" asp-validation-for="Name"></span>
</div>
<div class="form-group">
    <label class="text-muted" asp-for="Countery"></label>
    <select class="form-control" asp-for="CounteryId" asp-items="Counteries">
        <option>--Select Countery--</option>
    </select>
    <span class="text-danger" asp-validation-for="Name"></span>
</div>
<div class="form-group">
    <label class="text-muted" asp-for="YearBirth"></label>
    <input class="form-control" type="number" asp-for="YearBirth" />
    <span class="text-danger" asp-validation-for="YearBirth"></span>
</div>
<div class="form-group">
    <label class="text-muted" asp-for="Rate"></label>
    <input class="form-control" type="number" asp-for="Rate" />
    <span class="text-danger" asp-validation-for="Rate"></span>
</div>
<div class="form-group">
    <label class="text-muted" asp-for="Description"></label>
    <textarea class="form-control" asp-for="Description" maxlength="2500" rows="4"></textarea>
    <span class="text-danger" asp-validation-for="Description"></span>
</div>
